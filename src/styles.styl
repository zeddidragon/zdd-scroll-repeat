
.zdd-scrollbar-rail
  position: absolute
  width: 12px
  height: 100%
  background-color: rgba(98, 98, 98, 0.5)
  right: 5px
  top: 0

.zdd-scrollbar-thumb
  position: relative
  transform: translateY(-50%)
  width: 150%
  height: 30px
  background-color: rgb(0, 0, 0)
  border-radius: 20%
  margin-left: -25%
