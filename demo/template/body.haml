%ul(zdd-scroll-repeat="range")
  %li(ng-repeat="thing in thingies | zddScrollFilter:range"
    ng-style="{backgroundColor: thing.color}")
    .id {{thing.id}}
    .name {{thing.name}}
    .color {{thing.color}}

%style
  ul {
    list-style-type: none;
    padding: 0;
  }
  li {
    padding: 5px;
    margin: 2px;
    display: flex;
  }

  li>* {
    flex: 1;
  }
