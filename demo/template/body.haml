%style
  ul {
    list-style-type: none;
    padding: 0;
  }
  li {
    padding: 5px;
    margin: 2px;
    display: flex;
  }
  li>* {
    flex: 1
  }


%ul(zdd-scrollrepeat="range" collection="things")
  %li(ng-repeat="thing in thingies as things" 
    ng-style="{backgroundColor: thing.color}")
    .id {{thing.id}}
    .name {{thing.name}}
    .color {{thing.color}}
