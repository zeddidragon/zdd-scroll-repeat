ul(zdd-scroll-repeat="range")
  li(ng-repeat="thing in thingies | zddScrollFilter:range"
    ng-style="{backgroundColor: thing.color}")
    .id {{thing.id}}
    .name {{thing.name}}
    .color {{thing.color}}
    
ul(zdd-scroll-repeat="range2 || (range2={length:3})")
  li(ng-repeat="thing in thingies | zddScrollFilter:range2"
    ng-style="{backgroundColor: thing.color}")
    .id {{thing.id}}
    .name {{thing.name}}
    .color {{thing.color}}

style(type="text/css").
  ul {
    list-style-type: none;
    padding: 0;
  }
  li {
    padding: 5px;
    margin: 2px;
    display: flex;
  }
  li>* {
    flex: 1;
  }
